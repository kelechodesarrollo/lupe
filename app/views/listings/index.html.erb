<div class="center">
<div class="row">
  <% @listings.each do |listing| %>
  <div class="col-md-3">
      <div class="thumbnail">
      <%= image_tag listing.image.url(:medium) %>
      <div class="caption">
        <h3><%= listing.name %></h3>
        <p><%= number_to_currency(listing.price) %></p>
        <p><%= "Propietario: #{listing.user.name}"%></p>
        <%= link_to 'Ver Detalles', listing, class: "btn btn-link" %>
        <%= link_to 'Editar', edit_listing_path(listing), class: "btn btn-link" %>
        <%= link_to 'Eliminar', listing, method: :delete, data: { confirm: 'Estas seguro/a?' }, class: "btn btn-link" %>
      </div>
    </div>
       
       
  </div>
  <% end %> 
</div>
</div>
<br>

<%= link_to 'Nueva Fotito', new_listing_path, class: "btn btn-link" %>
