<%= form_for(@listing, :html => { :multipart => true }) do |f| %>
    <% if @listing.errors.any? %>
          <div class="alert alert-danger alert-dismissible">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@listing.errors.count, "error") %> No se pudo guardar el registro:</h4>

          <ul>
          <% @listing.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
    <% end %>
  <div class="form-group">
    <%= f.label :name, "Nombre" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Descripcion" %><br>
    <%= f.text_area :description, class: "form-control", rows: "7" %>
  </div>
  <div class="form-group">
    <%= f.label :price, "Precio" %><br>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image, "Imagen" %><br>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>
