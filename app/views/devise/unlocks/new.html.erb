<h2>Enviar instrucciones de desbloqueo</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :email, "Email" %><br />
  <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

  <div class="form-group"><%= f.submit "Enviar instrucciones", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
